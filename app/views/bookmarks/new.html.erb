<div class="container mt-5">
  <h1>Bookmark</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <div class="form-inputs">
      <%= f.input :comment %>
      <%# <%= f.association :list %>
      <%= f.association :movie, collection: Movie.all.order(:title) %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-outline-dark' %>
    </div>
  <% end %>
</div>
