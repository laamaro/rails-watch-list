<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://variety.com/wp-content/uploads/2021/03/Alamo-Drafthouse-1-16x9-1.jpg?w=1360&h=765&crop=1);">
  <div class="container" class="text-center">
    <h1>Save any kind of movie!</h1>
  </div>
</div>

<div class="container">
  <h1 class="text-center mt-5">My Lists</h1>
  <%= link_to 'Add a new list', new_list_path, class: 'btn btn-outline-dark btn-sm' %>
  <div class="cards my-5">
    <% @lists.each do |list| %>
        <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>)">
          <%= link_to list.name, list %>
        </div>
        <% end %>
    <% end %>
  </div>
</div>
