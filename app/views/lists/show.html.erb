<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>');">
  <div class="container" class="text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-3">
  <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-outline-dark my-3" %>
  <div class="d.flex row">
    <% @list.movies.each do |movie| %>
    <div class="col-sm-6">
      <div class="card" style="width: 20rem">
        <img src="<%=movie.poster_url%>" class="card-img-top" alt="..."/>
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h2>
          <p class="card-text"><%=movie.overview%></p>
          <p class="card-text"> Review: <%= movie.bookmarks.last.comment %></p>
            <%= link_to "Remove", bookmark_path(@list), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end%>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'Back to list', root_path, class: "btn btn-outline-dark" %>
</div>
