<div class="container mt-5">
  <h3><%= @list.name %></h3>

<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-outline-dark" %>

<div class=“row”>
  <% @list.movies.each do |movie| %>
  <div class=“col-6”>
    <div class="card" style="width: 20rem">
      <img src="<%=movie.poster_url%>" class="card-img-top" alt="..."/>
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h2>
        <p class="card-text"><%=movie.overview%></p>
        <p class="card-text"> Review: <%= movie.bookmarks.last.comment %></p>
          <%= link_to "Remove", bookmark_path(@list), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end%>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back to list', root_path %>
</div>
